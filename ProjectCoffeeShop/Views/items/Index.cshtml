@model IEnumerable<ProjectCoffeeShop.Models.items>

@{
    ViewData["Title"] = "Index";
}

<partial name="../Shared/header.cshtml">

<div class="container container-table table-responsive">
    <a asp-action="Create" class='btn btn-outline-primary mb-3'>Add New Item</a>
    <table id="tableItems" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th class="th-sm">Name</th>
            <th class="th-sm">Description</th>
            <th class="th-sm">Cost Price</th>
            <th class="th-sm">Sell Price</th>
            <th class="th-sm">Quantity</th>
            <th class="th-sm">Strength</th>
            <th class="th-sm">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model) {
            var TargetId="modalN"+@item.Id;
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
               R @Html.DisplayFor(modelItem => item.Cost) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
               R @Html.DisplayFor(modelItem => item.sell)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoffeeStrength.Strength)
            </td>
            <td class='text-center'>

                 <a class='btn btn-primary btn-table-action' asp-action="Edit" asp-route-id="@item.Id"> <i class='fas fa-edit'></i></a>
<form  id="@item.Id"
                                method="post"
                                type="submit"
                                asp-action="Delete"
                                asp-route-id="@item.Id" 
                                onclick="return functionConfirm('@item.Id')">
                                <i class="btn btn-danger btn-table-action fa fa-trash"  onclick="return functionConfirm(@item.Id)"> </i></form>               
                                <a class='btn btn-primary btn-table-action' data-toggle="modal" data-target="#@TargetId"> <i class='fas fa-info'></i></a>

            </td>
        </tr>
                 <div class="modal fade align-middle" id=@TargetId  aria-hidden="true">
                        <div class="modal-dialog modal-dialog-scrollable" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h4 class="modal-title" id="modalScrollableTitle">Item Detail</h4>
                              
                            </div>
                            <div class="modal-body">

                                <div class="row">
                  <!-- User Card -->
               <div class="col">
                      
                      <div class="user-avatar-section">
                        <div class="d-flex flex-column align-items-center">
                          <img class="img-fluid rounded my-4" src="~/img/shop_coffee/@item.ImagePath"  width="100%" alt="@item.Name">
                          
                        </div>
                      </div>
                      <h5 class="border-bottom pb-2 mb-4">Detail</h5>
                      <div class="info-container">
                        <ul class="list-unstyled">
                          <li class="mb-3">
                            <span class="fw-bold me-2">Name:</span>
                            <span>@Html.DisplayFor(model => item.Name)</span>
                          </li>
                         
                         <li class="mb-3">
                            <span class="fw-bold me-2">Description:</span>
                            <span>@Html.DisplayFor(model => item.Description)</span>
                          </li>
                         
                         
                          <li class="mb-3">
                            <span class="fw-bold me-2">Quantity</span>
                            <span>@Html.DisplayFor(model => item.Quantity) </span>
                          </li>  
                          <li class="mb-3">
                            <span class="fw-bold me-2">Price cost</span>
                            <span>@Html.DisplayFor(model => item.Cost) R</span>
                          </li>  
                          <li class="mb-3">
                            <span class="fw-bold me-2">Price sell</span>
                            <span>@Html.DisplayFor(model => item.sell) R</span>
                          </li>
                      
                          
                     
                          
                        </ul>

                       <hr/>
                       <br>
                                  </div>
                              </div>
                            </div>
                          </div>
                              
                            <div class="modal-footer">
                              <button type="button" class="btn btn-danger" data-dismiss="modal">
                                Cancel
                              </button>
                         
                            </div>
                          </div>
                        </div>
                      </div>
}
  </tbody>
           
        

        
    </table>
</div>





