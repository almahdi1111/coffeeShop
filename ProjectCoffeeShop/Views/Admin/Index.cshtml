               <div class="card-body"><h5 class="card-title text-center">Messages</h5>
                   <p class="text-White">@ViewBag.Countmessages</p>
                    </div>
                </div>
                </a>
            </div>
             <div class="col-12 col-sm-6 col-md-4 col-lg-3 card-padding">
          <a asp-controller="items" asp-action="index" class="btn btn-info rounded ">
           <div class="bg-info  mb-3">
               <div class="card-body"><h5 class="card-title text-center">Items</h5>
                   <p class="text-White">@ViewBag.Countitems</p>
                    </div>
                </div>
                </a>
            </div>

        </div>
    </div>
    
