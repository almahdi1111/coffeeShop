@model ProjectCoffeeShop.Models.customer

@{
    ViewData["Title"] = "SingUp";
}
<link href="~/css/login.css" rel="stylesheet" />

<div class="login-html">
    <div class="signin-wrapper">
        <div class="signin-box" style="width: 700px">
            <h1 class="signin-title-primary text-center">GRINDER</h1>
            <h3 class="signin-title-secondary text-center">Sign Up</h3>

            <!-- BEGIN FORM -->
            <form method="post">
                <div class="form-group has-danger">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    @if(TempData["Error"] !=null)
                    {
                        <p class="text-danger">@TempData["Error"]</p>
                    }
                    <div class="row">
                          
                        <!-- First Name -->
                        <div class="col-12 col-sm-6">
                            <label for="register-firstname">First Name</label>
                            <input asp-for="FName" type="text" class="input-text form-control"/>

                           
                        </div>

                        <!-- Last Name -->
                        <div class="col-12 col-sm-6">
                            <label for="register-lastname">Last Name</label>
                            <input asp-for="LName" type="text" class="input-text form-control" />
                          
                        </div>

                        <!-- Email -->
                        <div class="col-12 col-sm-6">
                            <label for="register-email">Email</label>
                            <input asp-for="Email" type="email" class="input-text form-control" />
                            
                        </div>

                        <!-- Password -->
                        <div class="col-12 col-sm-6">
                            <label for="register-password">Password</label>
                            <input asp-for="Password" autocomplete="new-password" type="password" class="input-text form-control"/>
                          
                        </div>

                    </div>
                </div>

                <!-- Login Button -->
                <div class="login-button">
                    <button type="submit" name="submit" id="submit" class="btn btn-primary">REGISTER</button>
                </div>
            </form>

        </div>
    </div>
</div>